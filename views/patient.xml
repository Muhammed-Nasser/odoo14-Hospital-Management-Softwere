<odoo>
    <data>
        <!--Kanban view-->
        <record id="hospital_patient_kanban" model="ir.ui.view">
            <field name="name">hospital patient kanban</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            Name:
                                            <field name="name"/>
                                            Age:
                                            <field name="age"/>
                                            Gender:
                                            <field name="gender"/>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- tree view Main UI -->
        <record id="hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital patient tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="responsible_id"/>
                    <field name="age"/>
                    <field name="note"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <!-- form view to create or edit -->
        <record id="hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital patient form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <!--StatusBar and some controllers-->
                        <header>
                            <button id="button_confirm" name="action_confirm" string="Cancel" class="btn-danger"
                             attrs="{'invisible': [('state', '=', 'cancel')]}" type="object"/>
                            <button id="button_done" name="action_done" string="Done" class="btn-success"
                                   states="draft,confirm" type="object"/>
                            <field name="state" widget="statusbar" options="{'clickable': '1'}"
                                   statusbar_visible="draft,confirm"/>
                        </header>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="responsible_id"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>

                    <!--Email threats-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- search Edit -->
        <record id="hospital_patient_search" model="ir.ui.view">
            <field name="name">patient.search</field>
            <field name="model">hospital.patient</field>
            <field name="priority">32</field>
            <field name="arch" type="xml">
                <search string="Patients">

                    <!--search by name & note-->
                    <field name="name"/>
                    <field name="note"/>
                    <separator/>

                    <!--Group By-->
                    <group expand="1" string="Group By">
                        <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                        <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                    </group>

                    <!--Filters-->
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="Patient Name" name="patient_name" context="{'group_by':'name'}"/>
                </search>
            </field>
        </record>

        <!--Actions-->
        <record id="patients_action" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new patient!
                </p>
            </field>
        </record>

        <!-- side menu -->
        <menuitem
                id="hospital_base_root"
                name="My Hospital"/>

        <!-- main top menu -->
        <menuitem
                id="hospital_patient_root"
                name="Patients"
                parent="hospital_base_root"
                sequence="10"/>

        <!-- dropdown top menu -->
        <menuitem
                id="hospital_patient"
                name="Patients"
                parent="hospital_patient_root"
                action="patients_action"
                sequence="10"/>
    </data>
</odoo>